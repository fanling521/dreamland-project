<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanling.dreamland.mapper.AppRoleMapper">
    <resultMap type="AppRole" id="baseResult">
        <id property="id" column="id"/>
        <result property="role_name" column="role_name"/>
        <result property="role_desc" column="role_desc"/>
    </resultMap>

    <sql id="selectVo">
        select
        id,
        role_name,
        role_desc,
        create_time
        from t_app_role
    </sql>

    <select id="list" parameterType="AppRole" resultMap="baseResult">
        <include refid="selectVo"/>
        where 1=1
    </select>

    <select id="selectById" parameterType="String" resultMap="baseResult">
        <include refid="selectVo"/>
        where id = #{id}
    </select>

    <insert id="insert" parameterType="AppRole">
        insert into t_app_role(
        id,
        <if test="role_name != null and role_name != ''">role_name,</if>
        <if test="role_desc != null and role_desc != ''">role_desc,</if>
        create_time
        )values(
        uuid(),
        <if test="role_name != null and role_name != ''">#{role_name},</if>
        <if test="role_desc != null and role_desc != ''">#{role_desc},</if>
        sysdate()
        )
    </insert>

    <update id="update" parameterType="AppRole">
        update t_app_role
        <set>
            <if test="role_name != null and role_name != ''">role_name = #{role_name},</if>
            <if test="role_desc != null and role_desc != ''">role_desc = #{role_desc},</if>
            update_time = sysdate()
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="String">
        delete from t_app_role where id = #{id}
    </delete>

</mapper>