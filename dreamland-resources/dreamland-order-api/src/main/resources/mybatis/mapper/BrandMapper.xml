<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanling.dreamland.mapper.BrandMapper">
    <resultMap type="Brand" id="baseResult">
        <id property="id" column="id"/>
        <result property="b_e_name" column="b_e_name"/>
        <result property="b_c_name" column="b_c_name"/>
        <result property="b_img_path" column="b_img_path"/>
        <result property="b_type" column="b_type"/>
        <result property="b_display" column="b_display"/>
    </resultMap>

    <sql id="selectVo">
        select
        id,
                    b_e_name,
                    b_c_name,
                    b_img_path,
                    b_type,
                    b_display,
                create_time
        from t_brand
    </sql>

    <select id="list" parameterType="Brand" resultMap="baseResult">
        <include refid="selectVo"/>
        <where>
            <if test="b_e_name != null and b_e_name != ''">
                AND b_e_name like concat('%', #{b_e_name}, '%')
            </if>
        </where>
    </select>

    <select id="selectById" parameterType="String" resultMap="baseResult">
        <include refid="selectVo"/>
        where id = #{id}
    </select>

    <insert id="insert" parameterType="Brand">
        insert into t_brand(
        id,
        <if test="b_e_name != null and b_e_name != ''">b_e_name,</if>
        <if test="b_c_name != null and b_c_name != ''">b_c_name,</if>
        <if test="b_img_path != null and b_img_path != ''">b_img_path,</if>
        <if test="b_type != null and b_type != ''">b_type,</if>
        <if test="b_display != null and b_display != ''">b_display,</if>
        create_time
        )values(
        uuid(),
        <if test="b_e_name != null and b_e_name != ''">#{b_e_name},</if>
        <if test="b_c_name != null and b_c_name != ''">#{b_c_name},</if>
        <if test="b_img_path != null and b_img_path != ''">#{b_img_path},</if>
        <if test="b_type != null and b_type != ''">#{b_type},</if>
        <if test="b_display != null and b_display != ''">#{b_display},</if>
        sysdate()
        )
    </insert>

    <update id="update" parameterType="Brand">
        update t_brand
        <set>
            <if test="b_e_name != null and b_e_name != ''">b_e_name = #{b_e_name},</if>
            <if test="b_c_name != null and b_c_name != ''">b_c_name = #{b_c_name},</if>
            <if test="b_img_path != null and b_img_path != ''">b_img_path = #{b_img_path},</if>
            <if test="b_type != null and b_type != ''">b_type = #{b_type},</if>
            <if test="b_display != null and b_display != ''">b_display = #{b_display},</if>
            update_time = sysdate()
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="String">
        delete from t_brand where id = #{id}
    </delete>

</mapper>