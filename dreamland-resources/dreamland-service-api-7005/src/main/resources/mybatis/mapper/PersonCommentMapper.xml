<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanling.dreamland.mapper.PersonCommentMapper">
    <resultMap type="PersonComment" id="baseResult">
        <id property="id" column="id"/>
        <result property="order_id" column="order_id"/>
        <result property="p_user_id" column="p_user_id"/>
        <result property="star_lv" column="star_lv"/>
        <result property="remark" column="remark"/>
        <result property="user_id" column="user_id"/>
    </resultMap>

    <sql id="selectVo">
        select
            id,
            order_id,
            p_user_id,
            star_lv,
            remark,
            user_id,
            create_time
        from t_person_comment
    </sql>

    <select id="list" parameterType="PersonComment" resultMap="baseResult">
        <include refid="selectVo"/>
        <where>
            <if test="star_lv != null and star_lv != ''">
                AND star_lv like concat('%', #{star_lv}, '%')
            </if>
        </where>
    </select>

    <select id="selectById" parameterType="String" resultMap="baseResult">
        <include refid="selectVo"/>
        where id = #{id}
    </select>

    <insert id="insert" parameterType="PersonComment">
        insert into t_person_comment(
        id,
        <if test="order_id != null and order_id != ''">order_id,</if>
        <if test="p_user_id != null and p_user_id != ''">p_user_id,</if>
        <if test="star_lv != null and star_lv != ''">star_lv,</if>
        <if test="remark != null and remark != ''">remark,</if>
        <if test="user_id != null and user_id != ''">user_id,</if>
        create_time
        )values(
        uuid(),
        <if test="order_id != null and order_id != ''">#{order_id},</if>
        <if test="p_user_id != null and p_user_id != ''">#{p_user_id},</if>
        <if test="star_lv != null and star_lv != ''">#{star_lv},</if>
        <if test="remark != null and remark != ''">#{remark},</if>
        <if test="user_id != null and user_id != ''">#{user_id},</if>
        sysdate()
        )
    </insert>

    <update id="update" parameterType="PersonComment">
        update t_person_comment
        <set>
            <if test="order_id != null and order_id != ''">order_id = #{order_id},</if>
            <if test="p_user_id != null and p_user_id != ''">p_user_id = #{p_user_id},</if>
            <if test="star_lv != null and star_lv != ''">star_lv = #{star_lv},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="user_id != null and user_id != ''">user_id = #{user_id},</if>
            update_time = sysdate()
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="String">
        delete from t_person_comment where id = #{id}
    </delete>

</mapper>