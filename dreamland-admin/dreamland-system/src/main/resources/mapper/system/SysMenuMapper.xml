<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanling.dreamland.mapper.SysMenuMapper">

    <resultMap type="SysMenu" id="MenuResult">
        <id property="menuId" column="menu_id"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentName" column="parent_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="orderNum" column="order_num"/>
        <result property="path" column="path"/>
        <result property="menuType" column="menu_type"/>
        <result property="visible" column="visible"/>
        <result property="perms" column="perms"/>
        <result property="component" column="component"/>
        <result property="redirect" column="redirect"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
    </resultMap>

    <resultMap type="SysMenuPure" id="MenuBaseResult">
        <id property="menuId" column="menu_id"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentName" column="parent_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="redirect" column="redirect"/>
    </resultMap>

    <sql id="selectMenuVo">
        select menu_id,
               menu_name,
               parent_id,
               parent_name,
               order_num,
               path,
               component,
               redirect,
               menu_type,
               visible,
               ifnull(perms, '') as perms,
               create_by,
               create_time
        from sys_menu
    </sql>

    <select id="selectMenusByUserId" parameterType="String" resultMap="MenuBaseResult">
        select distinct m.menu_id,
                        m.parent_id,
                        m.parent_name,
                        m.menu_name,
                        m.path,
                        m.component,
                        m.redirect,
                        m.perms,
                        m.menu_type,
                        m.order_num,
                        m.create_time
        from sys_menu m
                 left join sys_role_menu rm on m.menu_id = rm.menu_id
                 left join sys_user_role ur on rm.role_id = ur.role_id
                 LEFT JOIN sys_role ro on ur.role_id = ro.role_id
        where ur.user_id = #{userId}
          and m.menu_type = 1
          and m.visible = 0
          AND ro.status = 0
        order by m.order_num
    </select>

    <select id="selectPermsByUserId" parameterType="String" resultType="String">
        select distinct m.perms
        from sys_menu m
                 left join sys_role_menu rm on m.menu_id = rm.menu_id
                 left join sys_user_role ur on rm.role_id = ur.role_id
        where ur.user_id = #{userId}
    </select>

    <select id="selectMenuTree" resultMap="MenuResult">
        select menu_name, menu_id
        from sys_menu m
        where m.menu_type = '1'
        union all
        select 'æ ¹', '4438c79d-a398-4b35-ac2c-90bc70ddd44c'
    </select>

    <select id="selectMenuList" parameterType="SysMenu" resultMap="MenuResult">
        <include refid="selectMenuVo"/>
        <where>
            <if test="menuName != null and menuName != ''">
                AND menu_name like concat('%', #{menuName}, '%')
            </if>
            <if test="menuType != null and menuType != ''">
                AND menu_type = #{menuType}
            </if>
        </where>
        order by order_num
    </select>

    <delete id="deleteMenuById" parameterType="String">
        delete
        from sys_menu
        where menu_id = #{menuId}
           or parent_id = #{menuId}
    </delete>

    <select id="selectMenuById" parameterType="String" resultMap="MenuResult">
        SELECT t.menu_id,
               t.parent_id,
               t.menu_name,
               t.order_num,
               t.path,
               t.component,
               t.redirect,
               t.menu_type,
               t.visible,
               t.perms,
               (SELECT menu_name FROM sys_menu WHERE menu_id = t.parent_id) parent_name
        FROM sys_menu t
        where t.menu_id = #{menuId}
    </select>

    <select id="selectCountMenuByParentId" resultType="Integer">
        select count(1)
        from sys_menu
        where parent_id = #{menuId}
    </select>

    <select id="checkMenuNameUnique" parameterType="SysMenu" resultMap="MenuResult">
        <include refid="selectMenuVo"/>
        where menu_name=#{menuName} and parent_id = #{parentId}
    </select>

    <update id="updateMenu" parameterType="SysMenu">
        update sys_menu
        <set>
            <if test="menuName != null and menuName != ''">menu_name = #{menuName},</if>
            <if test="parentId != null and parentId != ''">parent_id = #{parentId},</if>
            <if test="parentName != null and parentName != ''">parent_name = #{parentName},</if>
            <if test="orderNum != null and orderNum != ''">order_num = #{orderNum},</if>
            <if test="path != null and path != ''">path = #{path},</if>
            <if test="menuType != null and menuType != ''">menu_type = #{menuType},</if>
            <if test="component != null">component = #{component},</if>
            <if test="redirect != null">redirect = #{redirect},</if>
            <if test="visible != null">visible = #{visible},</if>
            <if test="perms !=null">perms = #{perms},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = sysdate()
        </set>
        where menu_id = #{menuId}
    </update>

    <insert id="insertMenu" parameterType="SysMenu">
        insert into sys_menu(
        <if test="menuId != null and menuId != ''">menu_id,</if>
        <if test="parentId != null and parentId != ''">parent_id,</if>
        <if test="menuName != null and menuName != ''">menu_name,</if>
        <if test="parentName != null and parentName != ''">parent_name,</if>
        <if test="orderNum != null and orderNum != ''">order_num,</if>
        <if test="path != null and path != ''">path,</if>
        <if test="component != null and component != ''">component,</if>
        <if test="redirect != null and redirect != ''">redirect,</if>
        <if test="menuType != null and menuType != ''">menu_type,</if>
        <if test="visible != null">visible,</if>
        <if test="perms !=null and perms != ''">perms,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        create_time
        )values(
        <if test="menuId != null and menuId != ''">#{menuId},</if>
        <if test="parentId != null and parentId != ''">#{parentId},</if>
        <if test="menuName != null and menuName != ''">#{menuName},</if>
        <if test="parentName != null and parentName != ''">#{parentName},</if>
        <if test="orderNum != null and orderNum != ''">#{orderNum},</if>
        <if test="path != null and path != ''">#{path},</if>
        <if test="component != null">#{component},</if>
        <if test="redirect != null">#{redirect},</if>
        <if test="menuType != null and menuType != ''">#{menuType},</if>
        <if test="visible != null">#{visible},</if>
        <if test="perms !=null and perms != ''">#{perms},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        sysdate()
        )
    </insert>

</mapper> 